<body>
<div class="wrap">
  <h1>💌 Barışma Teklifi</h1>
  <p class="lead">Elvan sana nazikçe soruyor:</p>
  <p style="font-weight:600;font-size:18px">Songül, benimle barışır mısın? 💖</p>

  <div style="display:flex;gap:12px;justify-content:center;margin-top:18px">
    <button id="yesBtn" class="primary">Evet</button>
    <button id="noBtn" class="ghost">Hayır</button>
  </div>

  <div id="responseArea"></div>
</div>

<script>
  const yesBtn = document.getElementById('yesBtn');
  const noBtn = document.getElementById('noBtn');
  const responseArea = document.getElementById('responseArea');

  yesBtn.addEventListener('click', ()=>{
    yesBtn.disabled = true; noBtn.disabled = true;
    responseArea.innerHTML = `<div class="result">
      <strong>Harika!</strong> 💖<br/>Barıştınız!
      <div class="heart show">❤️</div>
    </div>`;
  });

  noBtn.addEventListener('click', ()=>{
    let count = 0;
    const bounce = setInterval(()=>{
      yesBtn.style.animation = 'bounce 0.3s ease';
      setTimeout(()=>{ yesBtn.style.animation = ''; }, 300);
      count++;
      if(count >= 5) clearInterval(bounce);
    }, 350);

    responseArea.innerHTML = `<div class="result" style="background:#f0f7ff;border-color:#d7e9ff;color:#1f4f86">
      "Hayır" cevabına saygı gösterildi 💙
    </div>`;
  });
</script>
</body>
</html>
